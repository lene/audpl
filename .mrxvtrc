# Many more interesting options at:
# https://github.com/gwtaylor/dotfiles/blob/master/.mrxvtrc

mrxvt.geometry:		    120x40+108
mrxvt*vt0*tabTitle:		term1
mrxvt*vt1*tabTitle:		term2
mrxvt*vt2*tabTitle:		term3
mrxvt*saveLines:		10240
!mrxvt*vt0*Pixmap:		/home/images/vt0bg.xpm
!mrxvt*vt1*Pixmap:		/home/images/vt1bg.xpm
!mrxvt*vt2*Pixmap:		/home/images/vt2bg.xpm
mrxvt*scrollbarStyle:		next
mrxvt*initProfileList:		3,3,3
mrxvt*transparent:		True
mrxvt*transparentMenubar:	False
mrxvt*transparentScrollbar:	False
mrxvt*foreground:		white
mrxvt*background:		black
mrxvt*tabForeground:		white
mrxvt*tabBackground:		grey10
mrxvt*itabForeground:		grey80
mrxvt*itabBackground:		grey20

mrxvt*fading:			20

mrxvt*font:			12x24
#mrxvt*font:			10x20
mrxvt*xft:			True
#mrxvt*xft:			False
mrxvt*xftSize:			24
mrxvt*xftAntialias:		True

mrxvt.xftPFont:			ubuntu
mrxvt.xftPSize:			20

Mrxvt.titleFormat:		%n. %t 
mrxvt*syncTabTitle:		True
mrxvt*syncTabIcon:		True

mrxvt*cursorBlink:		True

#Mrxvt.maxTabWidth:		80
Mrxvt.autohideTabbar:	True
